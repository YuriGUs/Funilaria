<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Separator?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="dev.yuri.controller.CadastroController"
      spacing="10" stylesheets="@/styles/cadastro_cliente.css">

    <Label text="Cadastro de Cliente"/>
    <TextField fx:id="txtNome" promptText="Nome"/>
    <TextField fx:id="txtCpfCnpj" promptText="CPF/CNPJ"/>
    <TextField fx:id="txtEndereco" promptText="Endereço"/>
    <TextField fx:id="txtTelefone" promptText="Telefone"/>
    <Button text="Cadastrar Cliente" onAction="#cadastrarCliente"/>

    <Separator/>

    <Label text="Cadastro de Veículo"/>
    <TextField fx:id="txtPlaca" promptText="Placa"/>
    <TextField fx:id="txtModelo" promptText="Modelo"/>
    <TextField fx:id="txtAno" promptText="Ano"/>
    <TextField fx:id="txtCor" promptText="Cor"/>
    <Button text="Cadastrar Veículo" onAction="#cadastrarVeiculo"/>
</VBox>
